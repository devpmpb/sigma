# =============================================================================
# SIGMA - Configuração de PRODUÇÃO
# =============================================================================
# Copie para .env no servidor de produção

# BANCO DE DADOS PRODUÇÃO
DATABASE_URL="postgresql://sigma_user:SENHA_FORTE_AQUI@localhost:5432/sigma_producao"

# SEGURANÇA (GERE NOVAS CHAVES PARA PRODUÇÃO!)
# Comando: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="GERE_UMA_CHAVE_NOVA_AQUI_64_BYTES"
JWT_REFRESH_SECRET="GERE_OUTRA_CHAVE_NOVA_AQUI_64_BYTES"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# AMBIENTE
NODE_ENV="production"
PORT=3001

# URLs
APP_URL="https://sigma.patobragado.pr.gov.br"
FRONTEND_URL="https://sigma.patobragado.pr.gov.br"

# SEGURANÇA
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30
BCRYPT_ROUNDS=12

# LOGS
LOG_LEVEL="warn"
DATABASE_LOGGING="false"
