<?xml version="1.0" encoding="UTF-8"?>
<!--
  web.config - Configuração do IIS para o Frontend SIGMA

  Este arquivo configura:
  - Proxy reverso para a API do backend
  - Roteamento SPA (Single Page Application)
  - Headers de segurança
  - Compressão GZIP
  - Cache de arquivos estáticos
-->

<configuration>
  <system.webServer>

    <!-- ============================================== -->
    <!-- REWRITE RULES - Proxy e SPA Routing -->
    <!-- ============================================== -->
    <rewrite>
      <rules>

        <!-- Regra 1: Proxy para API do Backend -->
        <rule name="API Proxy" stopProcessing="true">
          <match url="^api/(.*)" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:3001/api/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Regra 2: SPA Routing - Redirecionar tudo para index.html -->
        <rule name="SPA Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>

      </rules>

      <!-- Regras de saída para headers -->
      <outboundRules>
        <rule name="Add CORS Headers" preCondition="IsHTML">
          <match serverVariable="RESPONSE_Access-Control-Allow-Origin" pattern=".*" />
          <action type="Rewrite" value="*" />
        </rule>
        <preConditions>
          <preCondition name="IsHTML">
            <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/html" />
          </preCondition>
        </preConditions>
      </outboundRules>
    </rewrite>

    <!-- ============================================== -->
    <!-- HEADERS DE SEGURANÇA -->
    <!-- ============================================== -->
    <httpProtocol>
      <customHeaders>
        <!-- Previne MIME type sniffing -->
        <add name="X-Content-Type-Options" value="nosniff" />

        <!-- Proteção contra clickjacking -->
        <add name="X-Frame-Options" value="SAMEORIGIN" />

        <!-- Ativa proteção XSS do browser -->
        <add name="X-XSS-Protection" value="1; mode=block" />

        <!-- Content Security Policy (ajustar conforme necessário) -->
        <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' http://localhost:3001" />

        <!-- Força HTTPS (descomente em produção com SSL) -->
        <!-- <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" /> -->

        <!-- Referrer Policy -->
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />

        <!-- Permissions Policy -->
        <add name="Permissions-Policy" value="geolocation=(), microphone=(), camera=()" />
      </customHeaders>
    </httpProtocol>

    <!-- ============================================== -->
    <!-- COMPRESSÃO GZIP -->
    <!-- ============================================== -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    <httpCompression>
      <scheme name="gzip" dll="%Windir%\system32\inetsrv\gzip.dll" />
      <staticTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="message/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
        <add mimeType="application/xml" enabled="true" />
        <add mimeType="*/*" enabled="false" />
      </staticTypes>
      <dynamicTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="message/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
        <add mimeType="*/*" enabled="false" />
      </dynamicTypes>
    </httpCompression>

    <!-- ============================================== -->
    <!-- CACHE DE ARQUIVOS ESTÁTICOS -->
    <!-- ============================================== -->
    <staticContent>
      <!-- Cache para 1 ano (arquivos com hash no nome) -->
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />

      <!-- MIME types adicionais -->
      <remove fileExtension=".woff" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>

    <!-- ============================================== -->
    <!-- CONFIGURAÇÕES DE DIRETÓRIO -->
    <!-- ============================================== -->
    <directoryBrowse enabled="false" />
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- ============================================== -->
    <!-- TRATAMENTO DE ERROS PERSONALIZADOS -->
    <!-- ============================================== -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <!-- 404 - Redireciona para index.html (SPA) -->
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="/index.html" responseMode="ExecuteURL" />

      <!-- 500 - Erro interno -->
      <remove statusCode="500" subStatusCode="-1" />
      <error statusCode="500" prefixLanguageFilePath="" path="/index.html" responseMode="ExecuteURL" />
    </httpErrors>

  </system.webServer>

  <!-- ============================================== -->
  <!-- CONFIGURAÇÕES DO SISTEMA -->
  <!-- ============================================== -->
  <system.web>
    <compilation debug="false" />
    <customErrors mode="Off" />
  </system.web>

</configuration>

<!--
==============================================
INSTRUÇÕES DE USO
==============================================

1. CÓPIA PARA IIS:
   Após build do frontend, copie este arquivo junto com os arquivos do dist:

   npm run build
   xcopy /E /Y dist\* C:\inetpub\wwwroot\sigma\
   copy web.config C:\inetpub\wwwroot\sigma\

2. HABILITAR URL REWRITE NO IIS:
   - Baixar e instalar: https://www.iis.net/downloads/microsoft/url-rewrite
   - Baixar e instalar: https://www.iis.net/downloads/microsoft/application-request-routing

   Após instalar, no IIS Manager:
   - Selecionar o servidor
   - Abrir "Application Request Routing Cache"
   - Clicar em "Server Proxy Settings"
   - Marcar "Enable proxy"

3. CONFIGURAR SITE NO IIS:
   - Abrir IIS Manager
   - Criar novo site ou usar Default Web Site
   - Apontar para C:\inetpub\wwwroot\sigma
   - Configurar binding (porta 80 ou 443 para HTTPS)

4. HTTPS/SSL (Produção):
   - Obter certificado SSL
   - No IIS Manager, binding do site, adicionar HTTPS na porta 443
   - Descomentar linha Strict-Transport-Security nos headers

5. TESTAR:
   http://localhost          -> Frontend
   http://localhost/api/...  -> Backend (proxy)

6. LOGS:
   Logs do IIS em: C:\inetpub\logs\LogFiles

==============================================
TROUBLESHOOTING
==============================================

Problema: Erro 500.19
Solução: Instalar URL Rewrite e ARR

Problema: API não funciona (502)
Solução: Verificar se backend está rodando (PM2)
         pm2 status

Problema: SPA routing não funciona
Solução: Verificar se URL Rewrite está habilitado

Problema: CORS errors
Solução: Verificar backend/src/index.ts - configuração do cors()
         Verificar se frontend está na mesma origem

==============================================
-->
